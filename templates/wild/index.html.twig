        <h1>Toutes les séries de la table program : </h1>
        {% for program in programs %}
                <div>
                        <h2>{{ loop.index }} / <a href="{{ path('wild_showByProgram', { 'slug': program.title }) }}">{{ program.title }}</a> - Catégorie : {{ program.category.name }}</h2>
                        <p>{{ program.summary }}</p>

                </div>
        {% else %}
                Aucune série trouvée.
        {% endfor %}
        <a href="{{ path('app_index') }}">
                Retour à l'accueil
        </a>
